pipeline {
    agent none

    stages {
        stage('Build Java App') {
            agent {
                docker {
                    image 'maven:3.9.6-eclipse-temurin-17'
                    args '-v $PWD:/workspace'
                }
            }
            steps {
                dir('multi-stage-multi-agent/java-app') {
                    sh 'mvn clean package -DskipTests'
                }
            }
        }

        stage('Build Node App') {
            agent {
                docker {
                    image 'node:18'
                }
            }
            steps {
                dir('multi-stage-multi-agent/node-app') {
                    sh 'npm install'
                    sh 'npm run build || true'   // safe build
                }
            }
        }

        stage('Docker Build & Push') {
            agent {
                docker {
                    image 'docker:27'
                    args '-v /var/run/docker.sock:/var/run/docker.sock'
                }
            }
            steps {
                sh 'echo Building Docker images (optional)...'
            }
        }

        stage('Deploy') {
            agent any
            steps {
                sh 'echo Deploying...'
            }
        }
    }
}
